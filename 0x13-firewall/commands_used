sudo sed -i 's/DEFAULT_FORWARD_POLICY="DROP"/DEFAULT_FORWARD_POLICY="ACCEPT"/' /etc/default/ufw
sudo sed -i 's|#net/ipv4/ip_forward=1|net/ipv4/ip_forward=1|' /etc/ufw/sysctl.conf
sudo echo "*nat">tempp
sudo echo ":POSTROUTING ACCEPT [0:0]">>tempp
sudo echo "-A PREROUTING -p tcp --dport 8080 -j REDIRECT --to-port 80">>tempp
sudo echo "COMMIT">>tempp
sudo cat temmp /etc/ufw/before.rules > newtp
sudo mv newtp /etc/ufw/before.rules
sudo rm tempp newtp
sudo ufw allow 8080
sudo ufw allow 80
sudo ufw enable
