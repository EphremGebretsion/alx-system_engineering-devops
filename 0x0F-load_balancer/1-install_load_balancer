#!/usr/bin/env bash
#install HAproxy load balancer
sudo apt-get install --no-install-recommends software-properties-common -y
sudo add-apt-repository ppa:vbernat/haproxy-2.0 -y
sudo apt-get install haproxy=2.0.\* -y
sudo mv /etc/haproxy/haproxy.cfg /etc/haproxy/haproxy.cfg.org
sudo echo "ENABLED=1">> /etc/default/haproxy
sudo touch /etc/haproxy/haproxy.cfg
printf %s "global
    log 127.0.0.1 local0 notice
    maxconn 2000
    user haproxy
    group haproxy

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    retries 3
    option redispatch
    timeout connect  5000
    timeout client  10000
    timeout server  10000

frontend http-in
    bind *:80
    default_backend servers

backend servers
    balance roundrobin
    server 4306-web-01 54.234.16.12:80 check
    server 4306-web-02 107.23.106.236:80 check
" >> /etc/haproxy/haproxy.cfg
sudo systemctl enable haproxy
